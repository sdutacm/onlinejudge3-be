{
  // 使用 IntelliSense 了解相关属性。
  // 悬停以查看现有属性的描述。
  // 欲了解更多信息，请访问: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug",
      "type": "node",
      "autoAttachChildProcesses": true,
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development"
      },
      "port": 9229,
      // "preLaunchTask": "TypeScript compile",
      "protocol": "auto",
      "request": "launch",
      "restart": true,
      "runtimeArgs": [
        "run",
        "debug",
        "--",
        "--inspect"
      ],
      "runtimeExecutable": "npm",
      "skipFiles": [
        // "${workspaceFolder}/../../node_modules/rxjs/**/*.js",
        "${workspaceFolder}/node_modules/rxjs/**/*.js",
        "<node_internals>/**/*.js"
      ]
    },
    {
      "name": "Test",
      "type": "node",
      "autoAttachChildProcesses": true,
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "test",
        "TS_NODE_PROJECT": "test/tsconfig.json",
      },
      "port": 9229,
      "protocol": "auto",
      "request": "launch",
      "restart": true,
      "runtimeArgs": [
        "run",
        "devtest",
        "--",
        "--inspect"
      ],
      "runtimeExecutable": "npm",
      "skipFiles": [
        // "${workspaceFolder}/../../node_modules/rxjs/**/*.js",
        "${workspaceFolder}/node_modules/rxjs/**/*.js",
        "<node_internals>/**/*.js"
      ],
      "timeout": 60000
    },
  ]
}
